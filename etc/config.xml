<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <auto_instagram_post>
            <general>
                <enabled>0</enabled>
                <username/>
                <password backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <enabled_observer>1</enabled_observer>
            </general>
            <comment_hashtag>
                <enabled>0</enabled>
                <product_description>1</product_description>
                <category_hashtag>1</category_hashtag>
                <enabled_custom>0</enabled_custom>
                <description_template><![CDATA[{{CUSTOMHASTAG}} {{CATEGORYHASHTAG}} {{PRODUCTDESC}} {{PRODUCTNAME}}]]></description_template>
            </comment_hashtag>
            <cron>
                <enabled>0</enabled>
                <limit>10</limit>
            </cron>
        </auto_instagram_post>
    </default>
</config>
